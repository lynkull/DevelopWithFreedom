<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AAF55E"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="30000sp">

            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F76B00"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="2,3 Notification"
                tools:layout_editor_absoluteX="204dp"
                tools:layout_editor_absoluteY="373dp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#44ECC2"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="2,3 Context"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="507dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:background="#FF80D4"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="1 drop down menu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button13" />

            <Button
                android:id="@+id/button13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="1 Functions and Parameters"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button14" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="#F76A6A"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="1 recycler view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button5" />

            <Button
                android:id="@+id/button12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#EE2720F5"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="2,3 Service"
                tools:layout_editor_absoluteX="107dp"
                tools:layout_editor_absoluteY="442dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="#FCF72828"
                android:onClick="marginsPaddingButtonCicked"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="1 Margins, Padding, and More"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#5B94F8"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="2 local file storage"
                tools:layout_editor_absoluteX="232dp"
                tools:layout_editor_absoluteY="451dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F801A522"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="3 external storage"
                tools:layout_editor_absoluteX="236dp"
                tools:layout_editor_absoluteY="675dp" />

            <Button
                android:id="@+id/button14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="1 Logic Statements"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:background="#B783F5"
                android:onClick="hideAndShowLayoutButtonClicked"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="1 Hide and Show Layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button4" />

            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#3C925C"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="2 Different Widgets"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="373dp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FDFFDF43"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="2 pass data between activities"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="313dp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F0E5FAFA"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="3 Collections Framework"
                tools:layout_editor_absoluteX="50dp"
                tools:layout_editor_absoluteY="627dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</ScrollView>